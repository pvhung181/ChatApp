<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.home.HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        >
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:title="@string/messages"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:navigationIcon="@drawable/baseline_arrow_back_24"

            />
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_8dp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_friends_messages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>



    <fragment
        android:id="@+id/bottom_app_bar_fragment"
        android:layout_width="match_parent"
        android:name="vn.pvhung.appchat.fragments.BottomAppBarFragment"
        android:layout_height="?attr/actionBarSize"
        tools:layout="@layout/fragment_bottom_app_bar"
        app:layout_constraintBottom_toBottomOf="parent">
    </fragment>



</androidx.constraintlayout.widget.ConstraintLayout>